CREATE TABLE tbl_Member
( 
	Mem_ID INT NOT NULL PRIMARY KEY,
	Mem_Name VARCHAR(25) NOT NULL,
	Mem_Address VARCHAR(25) NOT NULL,
	Mem_City VARCHAR(14) NOT NULL,
	Mem_State VARCHAR(2),
	Zip INT NOT NULL
);


CREATE TABLE tbl_Provider
( 
	Prov_ID INT NOT NULL PRIMARY KEY,
	Prov_Name VARCHAR(25) NOT NULL,
	Prov_Address VARCHAR(25) NOT NULL,
	Prov_City VARCHAR(14) NOT NULL,
	Prov_State VARCHAR(2),
	Zip INT NOT NULL
);


CREATE TABLE tbl_Services
( serv_code INT NOT NULL PRIMARY KEY,
  serv_name VARCHAR(25) NOT NULL,
  SERV_fee DECIMAL(5,2)
);

CREATE TABLE tbl_Encounters
( 
	UID INT NOT NULL IDENTITY (1,1) PRIMARY KEY,
	Prov_ID INT NOT NULL,
	Mem_ID INT NOT NULL,
	serv_code INT NOT NULL,
	record_date DATETIME NOT NULL,
	Enctr_date DATE NOT NULL,
	Comment VARCHAR(100) NOT NULL, 
	CONSTRAINT fk_provider FOREIGN KEY (Prov_ID)
    REFERENCES tbl_Provider(Prov_ID),
	CONSTRAINT fk_member FOREIGN KEY (Mem_ID)
    REFERENCES tbl_Member(Mem_ID),
	CONSTRAINT fk_services FOREIGN KEY (serv_code)
    REFERENCES tbl_Services(serv_code)
);


CREATE TABLE tbl_MemReport
( 
	UID INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
	record_date DATE NOT NULL,
	Content TEXT NOT NULL
);


CREATE TABLE tbl_ProvReport
( 
	UID INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
	record_date DATE NOT NULL,
	Content TEXT NOT NULL
);


CREATE TABLE tbl_EFTReport
( 
	UID INT NOT NULL IDENTITY(1,1) PRIMARY KEY,
	record_date DATE NOT NULL,
	Content TEXT NOT NULL
);
